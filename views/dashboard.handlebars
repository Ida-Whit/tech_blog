<!--Page for displaying your current blog posts and creating a new blog post-->
<div>
    <h3>Your Dashboard</h3>
</div>

{{#if blogs.length}}
<div>
    <h2>Current Posts:</h2>
    {{#each blogs as |blog|}}
    <h4><a href="/edit/{{blog.id}}"></a></h4>
    <button type="delete" class="btn btn-primary">Delete</button>
    {{/each}}
</div>
{{/if}}

<div class="new-post">
    <h3>Create New Post:</h3>
    <form>
  <div class="form-group">
    <label for="exampleInputTitle">Blog Title</label>
    <input type="title" class="form-control" id="exampleTitle" aria-describedby="titleHelp" placeholder="Enter title">

  </div>
  <div class="form-group">
    <label for="exampleInputPost">Post</label>
    <input type="post" class="form-control" id="exampleInputPost" placeholder="Post Content">
  </div>
  
  </div>
  <button type="submit" id="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<script src="/js/blog.js"></script>